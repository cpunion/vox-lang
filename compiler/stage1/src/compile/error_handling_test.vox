import "std/testing" as t
import "compile" as c
import "loader" as ld
import "codegen" as cg

fn test_compile_question_propagation_smoke() -> () {
  let mut fs: Vec[ld.SourceFile] = Vec();
  fs.push(ld.SourceFile {
    path: "src/main.vox",
    text: "enum Result[T, E] { Ok(T), Err(E) }\nfn get(flag: bool) -> Result[i32, String] { if flag { return .Ok(7); } return .Err(\"bad\"); }\nfn run(flag: bool) -> Result[i32, String] { let v: i32 = get(flag)?; return .Ok(v + 1); }\nfn main() -> i32 { let r: Result[i32, String] = run(true); return match r { .Ok(v) => v, .Err(_e) => 0 }; }",
  });
  let r: c.CompileResult = c.compile_files_to_c(fs, cg.EmitOptions { emit_driver_main: true, driver_main_kind: cg.DriverMainKind.User, emit_test_main: false, test_funcs: Vec() });
  t.assert_with(r.ok, r.err);
  t.assert(r.ok);
}

