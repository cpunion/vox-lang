// Stage1 IR definitions (initial skeleton).
//
// Design note:
// Stage0 (host compiler) currently has no references/pointers in the language core,
// so we model recursive structures using small indices into arenas.

pub enum TyKind { Bad, Unit, Bool, I32, I64, String, Struct, Enum, Vec }

pub struct Ty {
  pub kind: TyKind,
  // For nominal types: qualified name. Otherwise empty.
  pub name: String,
  // For Vec: element type index in TyPool, otherwise -1.
  pub elem: i32,
}

pub struct TyPool {
  pub tys: Vec[Ty],
}

pub struct AddTyResult {
  pub pool: TyPool,
  pub idx: i32,
}

pub fn ty_pool() -> TyPool {
  return TyPool { tys: Vec() };
}

pub fn ty_bad() -> Ty { return Ty { kind: TyKind.Bad, name: "", elem: -1 }; }
pub fn ty_unit() -> Ty { return Ty { kind: TyKind.Unit, name: "", elem: -1 }; }
pub fn ty_bool() -> Ty { return Ty { kind: TyKind.Bool, name: "", elem: -1 }; }
pub fn ty_i32() -> Ty { return Ty { kind: TyKind.I32, name: "", elem: -1 }; }
pub fn ty_i64() -> Ty { return Ty { kind: TyKind.I64, name: "", elem: -1 }; }
pub fn ty_string() -> Ty { return Ty { kind: TyKind.String, name: "", elem: -1 }; }

pub fn ty_struct(name: String) -> Ty { return Ty { kind: TyKind.Struct, name: name, elem: -1 }; }
pub fn ty_enum(name: String) -> Ty { return Ty { kind: TyKind.Enum, name: name, elem: -1 }; }
pub fn ty_vec(elem: i32) -> Ty { return Ty { kind: TyKind.Vec, name: "", elem: elem }; }

pub fn ty_pool_add(pool: TyPool, ty: Ty) -> AddTyResult {
  let mut p: TyPool = pool;
  let mut v: Vec[Ty] = p.tys;
  v.push(ty);
  let idx: i32 = v.len() - 1;
  p.tys = v;
  return AddTyResult { pool: p, idx: idx };
}

pub fn ty_pool_get(pool: TyPool, idx: i32) -> Ty {
  let v: Vec[Ty] = pool.tys;
  return v.get(idx);
}
