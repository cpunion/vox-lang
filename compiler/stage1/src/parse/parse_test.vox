  t.assert_eq(td.methods.len(), 1);
  t.assert_eq(td.methods.get(0).name, "show");

  let id: ast.ImplDecl = r.prog.impls.get(0);
  t.assert_eq(id.methods.len(), 1);
  t.assert_eq(id.methods.get(0).name, "show");
}

