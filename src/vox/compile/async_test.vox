fn contains(hay: String, needle: String) -> bool {
  if needle.len() == 0 { return true; }
  if hay.len() < needle.len() { return false; }
  let mut i: i32 = 0;
  while i <= hay.len() - needle.len() {
    if hay.slice(i, i + needle.len()) == needle { return true; }
    i = i + 1;
  }
  return false;
}

fn count_substr(hay: String, needle: String) -> i32 {
  if needle.len() == 0 { return 0; }
  if hay.len() < needle.len() { return 0; }
  let mut n: i32 = 0;
  let mut i: i32 = 0;
  while i <= hay.len() - needle.len() {
    if hay.slice(i, i + needle.len()) == needle {
      n = n + 1;
      i = i + needle.len();
    } else {
      i = i + 1;
    }
  }
  return n;
}

fn find_substr(hay: String, needle: String) -> i32 {
  if needle.len() == 0 { return 0; }
  if hay.len() < needle.len() { return -1; }
  let mut i: i32 = 0;
  while i <= hay.len() - needle.len() {
    if hay.slice(i, i + needle.len()) == needle { return i; }
    i = i + 1;
  }
  return -1;
}

