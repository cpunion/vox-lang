import "std/testing" as t
import "vox/internal/text" as txt

fn test_internal_text_trim_space_smoke() -> () {
  t.assert_eq(txt.trim_space("  hi\t"), "hi");
}

fn test_internal_text_prefix_suffix_smoke() -> () {
  t.assert(txt.has_prefix("abc", "a"));
  t.assert(txt.has_suffix("abc", "bc"));
  t.assert(!txt.has_prefix("abc", "z"));
}

fn test_internal_text_split_lines_smoke() -> () {
  let xs: Vec[String] = txt.split_lines("a\nb\n");
  t.assert_eq(xs.len(), 3);
  t.assert_eq(xs.get(0), "a");
  t.assert_eq(xs.get(1), "b");
  t.assert_eq(xs.get(2), "");
}

fn test_internal_text_contains_str_smoke() -> () {
  let mut xs: Vec[String] = Vec();
  xs.push("a");
  xs.push("b");
  t.assert(txt.contains_str(xs, "a"));
  t.assert(!txt.contains_str(xs, "c"));
}

fn test_internal_text_unquote_double_trimmed_smoke() -> () {
  t.assert_eq(txt.unquote_double_trimmed(" \"v0.2.0\" "), "v0.2.0");
  t.assert_eq(txt.unquote_double_trimmed("v0.2.0"), "v0.2.0");
}
