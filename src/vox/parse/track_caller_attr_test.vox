import "std/testing" as t
import "vox/parse" as p

fn track_attr_parse_ok(e: p.ParseError) -> bool { return e == p.ParseError.None; }

fn test_parse_track_caller_attr_no_paren_smoke() -> () {
  let src: String = "@track_caller\nfn f() -> i32 { return 1; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(track_attr_parse_ok(r.err));
  t.assert_eq(r.prog.funcs.len(), 1);
  t.assert(r.prog.funcs.get(0).track_caller);
}

fn test_parse_track_caller_attr_empty_paren_smoke() -> () {
  let src: String = "@track_caller()\nfn f() -> i32 { return 1; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(track_attr_parse_ok(r.err));
  t.assert(r.prog.funcs.get(0).track_caller);
}

fn test_parse_track_caller_attr_bad_args_rejected() -> () {
  let src: String = "@track_caller(x)\nfn f() -> i32 { return 1; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(!track_attr_parse_ok(r.err));
  t.assert(contains(p.parse_error_to_string(r.err), "track_caller takes no arguments"));
}

fn test_parse_track_caller_attr_on_trait_method_rejected() -> () {
  let src: String = "trait R { @track_caller fn f(x: Self) -> i32; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(!track_attr_parse_ok(r.err));
  t.assert(contains(p.parse_error_to_string(r.err), "track_caller attribute is only allowed on top-level fn"));
}

fn test_parse_track_caller_attr_on_impl_method_rejected() -> () {
  let src: String = "struct I { v: i32 }\nimpl I { @track_caller fn f(x: I) -> i32 { return x.v; } }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(!track_attr_parse_ok(r.err));
  t.assert(contains(p.parse_error_to_string(r.err), "track_caller attribute is only allowed on top-level fn"));
}
