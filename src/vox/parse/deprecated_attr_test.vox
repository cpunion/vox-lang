import "std/testing" as t
import "vox/parse" as p

fn dep_parse_ok(e: p.ParseError) -> bool { return e == p.ParseError.None; }

fn test_parse_deprecated_attr_with_message_smoke() -> () {
  let src: String = "@deprecated(\"use new_api\")\nfn old_api() -> i32 { return 1; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(dep_parse_ok(r.err));
  t.assert_eq(r.prog.funcs.len(), 1);
  t.assert_eq(r.prog.funcs.get(0).deprecated_message, "use new_api");
}

fn test_parse_deprecated_attr_without_args_smoke() -> () {
  let src: String = "@deprecated\nfn old_api() -> i32 { return 1; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(dep_parse_ok(r.err));
  t.assert_eq(r.prog.funcs.get(0).deprecated_message, "deprecated");
}

fn test_parse_deprecated_attr_bad_args_rejected() -> () {
  let src: String = "@deprecated(a, b)\nfn old_api() -> i32 { return 1; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(!dep_parse_ok(r.err));
  t.assert(contains(p.parse_error_to_string(r.err), "bad deprecated attribute arguments"));
}

fn test_parse_deprecated_attr_on_trait_method_rejected() -> () {
  let src: String = "trait R { @deprecated(\"x\") fn f(x: Self) -> i32; }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(!dep_parse_ok(r.err));
  t.assert(contains(p.parse_error_to_string(r.err), "deprecated attribute is only allowed on top-level fn"));
}

fn test_parse_deprecated_attr_on_impl_method_rejected() -> () {
  let src: String = "struct I { v: i32 }\nimpl I { @deprecated(\"x\") fn f(x: I) -> i32 { return x.v; } }";
  let r: p.ParseResult = p.parse_text(src);
  t.assert(!dep_parse_ok(r.err));
  t.assert(contains(p.parse_error_to_string(r.err), "deprecated attribute is only allowed on top-level fn"));
}
