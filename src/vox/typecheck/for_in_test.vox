import "std/testing" as t
import "vox/typecheck" as tc

fn test_typecheck_for_in_vec_smoke() -> () {
  let mut w: tc.World = tc.world();
  w = add_mod(w, "main", """
    fn main() -> i32 {
      let mut xs: Vec[i32] = Vec();
      xs.push(1);
      xs.push(2);
      xs.push(3);
      let mut s: i32 = 0;
      for x in xs {
        s = s + x;
      }
      return s;
    }
  """);
  let r: tc.TcResult = tc.typecheck_world(w);
  t.assert_with(ok(r), tc.tc_error_to_string(r.err));
}

fn test_typecheck_for_in_non_iterable_rejected() -> () {
  let mut w: tc.World = tc.world();
  w = add_mod(w, "main", """
    fn main() -> i32 {
      let x: i32 = 7;
      for v in x {
        let _k: i32 = v;
      }
      return 0;
    }
  """);
  let r: tc.TcResult = tc.typecheck_world(w);
  t.assert_with(!ok(r), "for-in over non-iterable should be rejected");
}
