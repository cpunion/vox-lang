fn find_decl_vis_fn(w: World, mod_path: String, name: String) -> i32 {
  let fm: FindModResult = find_mod(w, mod_path);
  if !fm.found { return ast.vis_private(); }
  let m: WorldModule = w.mods.get(fm.idx);
  let mut i: i32 = 0;
  while i < m.prog.funcs.len() {
    let fd: ast.FuncDecl = m.prog.funcs.get(i);
    if fd.name == name { return fd.vis; }
    i = i + 1;
  }
  return ast.vis_private();
}

