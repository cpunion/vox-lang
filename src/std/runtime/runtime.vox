pub fn mutex_i32_load(handle: i64) -> i32 { return __mutex_i32_load(handle); }
pub fn mutex_i32_store(handle: i64, v: i32) -> () {
  __mutex_i32_store(handle, v);
  return;
}
pub fn mutex_i32_drop(handle: i64) -> () {
  __mutex_i32_drop(handle);
  return;
}

