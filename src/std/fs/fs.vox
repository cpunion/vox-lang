// std/fs: minimal filesystem primitives for stage1 toolchain.

import "std/runtime" as rt

pub fn read_to_string(path: String) -> String { return rt.read_file(path); }

pub fn write_string(path: String, text: String) -> () {
  rt.write_file(path, text);
  return;
}

pub fn exists(path: String) -> bool { return rt.path_exists(path); }

pub fn mkdir_p(path: String) -> () {
  rt.mkdir_p(path);
  return;
}

pub fn walk_vox_files(root: String) -> Vec[String] { return rt.walk_vox_files(root); }
