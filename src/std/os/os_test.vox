import "std/os" as os
import "std/testing" as t

fn test_os_getenv_smoke() -> () {
  let has_path: String = os.getenv("PATH");
  t.assert(has_path.len() >= 0);

  let missing: String = os.getenv("__VOX_MISSING_ENV_SHOULD_NOT_EXIST__");
  t.assert(missing.len() >= 0);
}

fn test_os_args_and_exe_path_smoke() -> () {
  let argv: Vec[String] = os.args();
  t.assert(argv.len() >= 0);

  let exe: String = os.exe_path();
  t.assert(exe.len() >= 0);
}
