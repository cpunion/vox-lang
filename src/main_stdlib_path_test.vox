import "std/testing" as t

fn test_stdlib_root_normalize_repo_root_smoke() -> () {
  let r: String = normalize_std_search_root("/a/b");
  t.assert_eq(r, "/a/b");
}

fn test_stdlib_root_normalize_src_smoke() -> () {
  let r: String = normalize_std_search_root("/a/b/src");
  t.assert_eq(r, "/a/b");
}

fn test_stdlib_root_normalize_src_std_smoke() -> () {
  let r: String = normalize_std_search_root("/a/b/src/std");
  t.assert_eq(r, "/a/b");
}

fn test_stdlib_root_normalize_windows_smoke() -> () {
  let r: String = normalize_std_search_root("C:\\vox\\src\\std");
  t.assert_eq(r, "C:/vox");
}
