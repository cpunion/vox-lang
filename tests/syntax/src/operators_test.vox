fn test_syntax_operators_and_casts() -> () {
  // SYNTAX:S801 arithmetic operators
  // SYNTAX:S802 logical operators
  // SYNTAX:S803 bitwise and shift operators
  // SYNTAX:S804 comparison/equality operators
  // SYNTAX:S805 cast operator
  let src: String = """
fn main() -> i32 {
  let a: i32 = 5;
  let b: i32 = 2;
  let c: bool = (a > b) && (a != 0) || !(b == 3);
  let d: i32 = (a + b) * (a - b) / b % 3;
  let e: i32 = ((a << 1) | b) ^ (a & b);
  let f: i64 = a as i64;
  if c && f > 0 as i64 { return d + e; }
  return 0;
}
""";
  syntax_assert_parse_ok("S801-S805", src);
}

fn test_syntax_bad_operator_expr_fails() -> () {
  // SYNTAX:S806 malformed operator expression should fail parse
  syntax_assert_parse_fail("S806", "fn main() -> i32 { let x: i32 = 1 + ; return x; }");
}
