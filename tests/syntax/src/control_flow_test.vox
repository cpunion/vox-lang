fn test_syntax_control_flow_forms() -> () {
  // SYNTAX:S101 if/else statement
  // SYNTAX:S102 if-expression
  // SYNTAX:S103 while
  // SYNTAX:S105 break/continue + loop keyword
  // SYNTAX:S106 match expression
  let src: String = """
fn main() -> i32 {
  let mut i: i32 = 0;
  let mut s: i32 = 0;
  while i < 3 {
    i = i + 1;
    if i == 2 {
      continue;
    } else {
      s = s + i;
    }
  }
  loop {
    s = s + 1;
    break;
  }
  let v: i32 = if s > 0 { 1 } else { 0 };
  let m: i32 = match v { 1 => 7, _ => 0 };
  return m;
}
""";
  syntax_assert_parse_ok("S101-S103,S105-S106", src);
}

fn test_syntax_control_flow_missing_brace_fails() -> () {
  // SYNTAX:S107 malformed control-flow should fail parse
  syntax_assert_parse_fail("S107", "fn main() -> i32 { if true { return 1; } else return 0; }");
}
