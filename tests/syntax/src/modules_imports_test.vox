fn test_syntax_import_and_visibility_forms() -> () {
  // SYNTAX:S601 import alias form
  // SYNTAX:S602 named import form
  // SYNTAX:S603 visibility declarations in module/import flow
  let src: String = """
import "math" as m
import {a as aa, b} from "util"
pub struct P { pub v: i32 }
pub fn f(x: i32) -> i32 { return x + 1; }
pub(crate) fn g(x: i32) -> i32 { return x + 2; }
pub(super) fn h(x: i32) -> i32 { return g(x); }
fn main() -> i32 { let p: P = P { v: 1 }; return f(p.v) + h(0); }
""";
  syntax_assert_parse_ok("S601-S603", src);
}

fn test_syntax_broken_import_fails() -> () {
  // SYNTAX:S604 malformed import should fail parse
  let src: String = """
import as m
fn main() -> i32 { return 0; }
""";
  syntax_assert_parse_fail("S604", src);
}
