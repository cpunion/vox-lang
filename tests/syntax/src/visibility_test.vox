fn test_syntax_visibility_markers() -> () {
  // SYNTAX:S015 visibility markers on items
  // SYNTAX:S016 visibility markers on struct fields
  let src: String = """
pub(crate) const N: i32 = 1
pub(super) fn get() -> i32 { return N; }

pub struct S {
  pub(crate) x: i32,
  pub(super) y: i32,
  pub z: i32,
}

fn main() -> i32 {
  let s: S = S { x: 1, y: 2, z: 3 };
  return get() + s.x + s.y + s.z;
}
""";
  syntax_assert_parse_ok("S015-S016", src);
}

fn test_syntax_invalid_visibility_marker_fails() -> () {
  // SYNTAX:S017 invalid visibility marker should fail parse
  let src: String = """
pub(local) const N: i32 = 1
fn main() -> i32 { return N; }
""";
  syntax_assert_parse_fail("S017", src);
}
