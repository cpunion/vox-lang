fn test_syntax_type_alias_const_and_union_alias() -> () {
  // SYNTAX:S011 type alias declaration
  // SYNTAX:S012 const declaration
  // SYNTAX:S013 labeled union type alias declaration
  let src: String = """
type Meter = i32

type Value = I32: i32 | Str: String

const START: Meter = 1
const INIT: Value = Value.I32(7)

fn main() -> i32 {
  let x: Meter = START;
  let y: i32 = match INIT {
    .I32(v) => v,
    .Str(_s) => 0,
  };
  return x + y;
}
""";
  syntax_assert_parse_ok("S011-S013", src);
}

fn test_syntax_malformed_type_or_const_fails() -> () {
  // SYNTAX:S014 malformed type/const declaration should fail parse
  let src_type: String = """
type Bad =
fn main() -> i32 { return 0; }
""";
  syntax_assert_parse_fail("S014-bad-type", src_type);

  let src_const: String = """
const X i32 = 1
fn main() -> i32 { return 0; }
""";
  syntax_assert_parse_fail("S014-bad-const", src_const);
}
