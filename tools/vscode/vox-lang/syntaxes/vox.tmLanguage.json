{
  "scopeName": "source.vox",
  "name": "Vox",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vox",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.vox",
          "begin": "\"\"\"",
          "end": "\"\"\""
        },
        {
          "name": "string.quoted.double.vox",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.vox", "match": "\\\\." }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vox",
          "match": "\\b(fn|let|mut|return|if|else|while|break|continue|match|struct|enum|import|as|from|pub|type|const|trait|impl|for|where|comptime|try|async|await)\\b"
        },
        {
          "name": "constant.language.boolean.vox",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.vox",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|String|Void|Never)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.vox",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?(f32|f64)?\\b"
        }
      ]
    }
  }
}
