{
  "name": "vox-lang",
  "displayName": "Vox Language",
  "description": "Vox language support (LSP diagnostics + formatting).",
  "version": "0.1.0",
  "publisher": "cpunion",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vox"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vox",
        "aliases": [
          "Vox",
          "vox"
        ],
        "extensions": [
          ".vox"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vox",
        "scopeName": "source.vox",
        "path": "./syntaxes/vox.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Vox",
      "properties": {
        "vox.compilerPath": {
          "type": "string",
          "default": "vox",
          "description": "Path to vox compiler executable."
        },
        "vox.nodePath": {
          "type": "string",
          "default": "node",
          "description": "Path to node executable used by `vox lsp`."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
